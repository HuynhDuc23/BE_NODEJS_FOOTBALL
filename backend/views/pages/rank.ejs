<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rank</title>
    <%- include('../utils/link.ejs')%>
    <style>
        body {
            background-color: #111;
            color: #fff;
            font-family: Arial, sans-serif;
        }
        .center {
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .w-1080 {
            width: 1080px;
            margin: auto;
        }
        .season-dropdown {
            margin-bottom: 20px;
        }
        label {
            color: #fff;
        }
        select {
            padding: 8px;
            border: 1px solid #fff;
            background-color: #333;
            color: #fff;
        }
        .content {
            margin-top: 30px;
        }
        h2 {
            color: #fff;
            margin-bottom: 20px;
            text-align: center;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
            color: #fff;
        }
        th {
            background-color: #555;
        }
        img {
            width: 50px;
            height: 50px;
            object-fit: contain;
        }
    </style>
</head>
<body>
    <div class="center">
        <div class="w-1080">
            <%- include ('../partials/header') %>
            <div class="season-dropdown">
                <label for="seasonSelect">Choose a season:</label>
                <select id="seasonSelect">
                    <% seasons.forEach(function(season) { %>
                        <option value="<%= season._id %>"><%= season.name %></option>
                    <% }); %>
                </select>
            </div>

            <div class="content">
                <h2>Ranking</h2>
                <table id="rankingTable">
                    <thead>
                        <tr>
                            <th>Rank</th>
                            <th>Logo</th>
                            <th>Team Name</th>
                            <th>Score</th>
                        </tr>
                    </thead>
                    <tbody id="rankingBody">
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        const seasonSelect = document.getElementById('seasonSelect');
        const rankingBody = document.getElementById('rankingBody');

        seasonSelect.addEventListener('change', function() {
            const selectedSeasonId = seasonSelect.value;
            const apiRankUrl = `/api/v1/match/rank/${selectedSeasonId}`;
            fetch(apiRankUrl)
                .then(response => response.json())
                .then(data => {
                    rankingBody.innerHTML = '';
                    data.forEach((team, index) => {
                        fetch(`/api/v1/team/view/idteam/${team.ID_team}`)
                            .then(response => response.json())
                            .then(teamData => {
                                const row = document.createElement('tr');
                                row.innerHTML = `
                                    <td>${index + 1}</td>
                                    <td><img src="${teamData.team.logo}" alt="Logo"></td>
                                    <td>${teamData.team.name}</td>
                                    <td>${team.score}</td>
                                `;
                                rankingBody.appendChild(row);
                            })
                            .catch(error => console.error('Error fetching team details:', error));
                    });
                })
                .catch(error => console.error('Error fetching ranking:', error));
        });
    </script>
</body>
</html>
