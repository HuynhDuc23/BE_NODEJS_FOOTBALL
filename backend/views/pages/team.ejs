<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include('../utils/link.ejs')%>
</head>
<body>
    <div class="center">
        <div class="w-1080">
            <%- include ('../partials/header') %>
            <div id="list" data ="<%=JSON.stringify(data)%>"></div>
            <div class="teams_search_containt">
                <input class="teams_search" type="text" id="searchInput" placeholder="Enter name">
                <div class="teams_search_box--icon">
                    <img class="teams_search--icon" src="data:image/png;base64,"/>
                </div>
            </div>
            <div class="teams_content" id="listTeam">
            <% data.forEach(item =>{ %>
                <a class="teams_content__link" href="/api/v1/team/<%=item._id%>">
                    <div class="teams_content__boxitem">
                        <img class="teams_content__boxitem--img" src="https://upload.wikimedia.org/wikipedia/vi/thumb/c/c7/Logo_Real_Madrid.svg/716px-Logo_Real_Madrid.svg.png" alt="">
                        <p class="teams_content__boxitem--name" style="color: #fff;"><%= item.name %></p>
                    </div>
                </a>
            <%})%>              
        </div>
        </div>
    </div>
    <script src="../../script/searchTeamsByName.js"></script>
</body>
</html>