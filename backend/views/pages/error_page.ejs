<!-- error.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Error</title>
    <%- include('../utils/link.ejs')%>
    <style>
        .container {
    position: absolute;
    top: 30%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
}
        h1 {
            font-size: 26px;
            font-weight: 500;
            color: red;
            margin-bottom: 20px;

        }
        p {
            color: white;
            margin-bottom: 10px;
        }
        a {
            color: #007bff;
        }
        .error-mess{
            font-size: 16px;
            color: #ccc;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Error</h1>
        <p>Oops! Something went wrong.</p>
        <% if (message) { %>
            <p class="error-mess"><%= message %></p>
        <% } %>
        <a href="/">Back to Home</a>
    </div>
</body>
</html>
