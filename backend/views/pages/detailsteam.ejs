<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Team Details</title>
    <%- include('../utils/link.ejs')%>
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #121212;
            color: #e0e0e0;
        }

        .team-details {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            background-color: #1e1e1e;
            padding: 20px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.7);
            border-radius: 10px;
            margin-top: 20px;
        }

        .team-info {
            flex: 1;
            margin-right: 20px;
            color: #fff;
        }

        .team-logo {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

        .team-logo img {
            max-width: 80px;
            height: auto;
            margin-right: 15px;
        }

        .team-info h1 {
            margin: 0;
            font-size: 2.5rem;
            color: #ff0000;
            text-transform: uppercase;
            letter-spacing: 1.5px;
        }

        .team-info p {
            margin: 10px 0;
            line-height: 1.6;
            color: #bbb;
        }

        .team-info .arena-img {
            width: 100%;
            height: auto;
            margin: 20px 0;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.7);
        }

        .players-list {
            flex: 2;
            padding-left: 20px;
            border-left: 2px solid #ff0000;
        }

        .players-list h2 {
            font-size: 1.8rem;
            margin-bottom: 20px;
            border-bottom: 2px solid #ff0000;
            padding-bottom: 10px;
            color: #ff0000;
            text-transform: uppercase;
            letter-spacing: 1.2px;
        }

        .players-list ul {
            list-style-type: none;
            padding: 0;
        }

        .players-list li {
            margin-bottom: 15px;
            padding: 15px;
            background-color: #2a2a2a;
            border: 1px solid #444;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
            transition: transform 0.3s ease, background-color 0.3s ease;
        }

        .players-list li:hover {
            transform: translateY(-5px);
            background-color: #3a3a3a;
        }

        .players-list li strong {
            font-weight: bold;
            color: #ff0000;
        }

        .players-list li:not(:last-child) {
            margin-bottom: 15px;
        }
        .team-info h1,
        .players-list h2 {
            font-family: 'Roboto', sans-serif;
        }

        .team-info p,
        .players-list li {
            font-family: 'Roboto', sans-serif;
            font-size: 1rem;
        }
        .team-info__des{
            font-size: 14px;
            color: #ccc;
        }
    </style>
</head>
<body>
    <div class="center">
        <div class="w-1080">
            <%- include ('../partials/header') %>
            <div class="team-details">
                <div class="team-info">
                    <div class="team-logo">
                        <!-- Logo của đội bóng -->
                        <img src="<%= data.logo %>" alt="Team Logo">
                        <!-- Tên của đội bóng -->
                        <h1><%= data.name %></h1>
                    </div>
                    <p class="team-info__des">Description: <%= data.description %></p>
                    <p><strong>Arena: </strong><%= data.nameArena %></p>
                    <img class="arena-img" src="https://upload.wikimedia.org/wikipedia/commons/thumb/4/43/Old_Trafford_inside_20060726_1.jpg/640px-Old_Trafford_inside_20060726_1.jpg" alt="Arena Image">
                </div>
                <div class="players-list">
                    <h2>Players</h2>
                    <ul>
                        <% data.players.forEach(player => { %>
                            <li>
                                <strong>Name:</strong> <%= player.name %> <br>
                                <strong>Shirt Number:</strong> <%= player.shirtNumber %> <br>
                            </li>
                        <% }); %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</body>
